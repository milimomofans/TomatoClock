page {
  height: 100%;
}
.timer-main {
  height: 60%;
  background: #3197ed;
  display: flex;
}
.timer-main .timer {
  margin: auto;
  width: 300px;
  height: 300px;
}
.timer-foot {
  height: 40%;
  background-color: white;
}
.timer-foot .foot-input {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  border-bottom: 1px solid #f2f2f2;
}
.timer-foot .choose-task {
  margin: 100rpx 0rpx;
  display: flex;
}
.timer-foot .choose-task .task {
  width: 50%;
}
.timer-foot .choose-task .task text {
  margin: 0 auto;
  display: block;
  width: 130rpx;
  height: 130rpx;
  border-radius: 100%;
  background-color: #48c23d;
  text-align: center;
  font-size: 25rpx;
  color: white;
  line-height: 130rpx;
  transform: all 0.5s;
}
